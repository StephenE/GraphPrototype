<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:ScottPlotAva="clr-namespace:ScottPlot.Avalonia;assembly=ScottPlot.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GraphPrototype.MainWindow"
        Title="GraphPrototype">

  <StackPanel>
    <StackPanel Orientation="Horizontal">
      <TextBlock Text="{Binding CurrentTime, StringFormat = '\{0:        ddd dd MMM HH:mm:ss\} '}" FontSize="30" />
      <TextBlock Text="{Binding Pressure, StringFormat = '\{0:0.00\} mb'}" FontSize="30" Margin="80,0,0,0"/>
    </StackPanel>
	  <ScottPlotAva:AvaPlot x:Name="avaPlot1" Height="400" />
  </StackPanel>
</Window>
